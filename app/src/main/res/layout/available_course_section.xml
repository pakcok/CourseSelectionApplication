<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="200dp">

    <TextView
        android:id="@+id/available_course_info"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:paddingLeft="18dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:text="Course Info."
        android:textSize="15sp" />

    <RadioButton
        android:id="@+id/available_course_info_radioButton"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/available_course_info"
        android:layout_alignParentRight="true"
        android:gravity="center" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#FFFFFF"
        android:layout_below="@+id/available_course_info"
        android:id="@+id/view" />

</RelativeLayout>